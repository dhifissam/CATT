{% macro deleteAction(path,text=null) %}
    <a href="javascript:void(0)" data-popup="tooltip" class="deleteItem text-mauve-icon" data-path="{{ path }}" title="Remove" ><i class="icon-trash"></i> {{ text }}</a>
{% endmacro %}
{% macro redirectAction(path,class,text,message=null) %}
    {% if message %}
        <a href="javascript:void(0)" data-popup="tooltip" title="{{ text }}"  class="redictionItem" data-message="{{ message }}" data-path="{{ path }}"><i class="{{ class }}"></i></a>
    {% else %}
        <a href="{{ path }}"><i class="{{ class }}"></i> {{ text }}</a>
    {% endif %}
{% endmacro %}
{% macro buttonRedirectAction(path,class,text,message=null) %}
    {% if message %}
        <a href="javascript:void(0)" class="redictionItem btn {{ class }}" data-message="{{ message }}" data-path="{{ path }}">{{ text }}</a>
    {% else %}
        <a href="{{ path }}"><i class="{{ class }}"></i> {{ text }}</a>
    {% endif %}
{% endmacro %}
{% macro updateAction(path) %}
    <a href="{{ path }}" data-popup="tooltip" title="Modifier" class="text-mauve-icon"><i class="icon-pencil7"></i></a>
{% endmacro %}
{% macro detailsAction(path) %}
    <a href="{{ path }}" data-popup="tooltip" title="Itineraires" class="text-mauve-icon"><i class="icon-list"></i></a>
{% endmacro %}
{% macro viewAction(path) %}
    <a href="{{ path }}" data-popup="tooltip" title="View"><i class="icon-eye"></i></a>
{% endmacro %}
{% macro lockAction(path) %}
    <a href="{{ path }}" data-popup="tooltip" title="Change Password" class="text-mauve-icon"><i class="icon-lock"></i></a>
{% endmacro %}
{% macro addItem(text,path) %}
    <a href="{{ path }}" type="button" class="btn bg-rose"><i class="icon-plus3 position-left"></i>{{ text }}</a>
{% endmacro %}
{% macro submitForm() %}
    <div class="text-right" style="margin-top:10px;">
        <button type="submit" class="btn bg-primary">Enregistrer <i class="icon-arrow-right14 position-right"></i>
        </button>
    </div>
{% endmacro %}
{% macro filtreForm(class) %}
    <div class="{{ class }}">
        <div class="form-group">
            <label>
                &nbsp;
            </label>
            <button type="submit" class="btn btn-block btn-primary">Search <i class="icon-arrow-right14 position-right"></i>
            </button>
        </div>
    </div>
{% endmacro %}
{% macro languages() %}
    <div class="heading-elements">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown language-switch">
                <a class="dropdown-toggle text-gris-300" data-toggle="dropdown">
                    <img src="{{ asset('back_template/assets/images/flags/'~app.session.get("locale").code~'.png') }}" class="position-left" alt="">
                    {{ app.session.get("locale").name }}
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li {% if app.session.get("locale").code =="en" %}class="active"{% endif %}><a href="{{ path('change_locale',{locale:"en"}) }}" class="english"><img src="{{ asset('back_template/assets/images/flags/en.png') }}" alt=""> English</a></li>
                    <li {% if app.session.get("locale").code =="fr" %}class="active"{% endif %}><a href="{{ path('change_locale',{locale:"fr"}) }}" class="espana"><img src="{{ asset('back_template/assets/images/flags/fr.png') }}" alt=""> Francais</a></li>
                </ul>
            </li>
        </ul>
    </div>
{% endmacro %}
