{% extends "base.html.twig" %}
{% block title %}Marques{% endblock %}
{% block breadcrumb %}
    <li><a href="{{ path('marque_list') }}">Marques</a></li>
{% endblock %}
 {% block body %}
     <div class="panel panel-body">
         <div class="panel-heading">
             {{ buttons.addItem("Nouvelle marque",path("marque_form")) }}
         </div>
         <table class="table" id="myTable">
             <thead>
             <tr>
                 <th>#</th>
                 <th>Libell√©</th>
                 <th>modelle</th>
                 <th>Action</th>
             </tr>
             </thead>
             <tbody>
             {% for marque in marques %}
                 <tr>
                     <td>{{ marque.id }}</td>
                     <td>{{ marque.libelle }}</td>
                     <td>{{ marque.modelle }}</td>
                     <td>
                         <ul class="icons-list">
                             <li>{{ buttons.updateAction(path("marque_form",{id:marque.id})) }}</li>
                             <li>{{ buttons.redirectAction(path("marque_delete",{id:marque.id}),"icon-trash","Supprimer",'Etes vous certain de vouloir supprimer cette marque') }}</li>
                         </ul>
                     </td>
                 </tr>
             {% endfor %}
             </tbody>
         </table>
     </div>
 {% endblock %}