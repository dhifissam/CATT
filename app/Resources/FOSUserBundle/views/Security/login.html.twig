{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="panel panel-body login-form">
            <div class="text-center">
                <div class="icon-object border-warning-400 text-warning-400"><i class="icon-people"></i></div>
                <h5 class="content-group-lg">Connectez-vous Ã  votre compte <small class="display-block">Entrez vos informations d'identification</small></h5>
            </div>
            {% if error %}
                <div class="alert alert-danger"><i class="icon-alert position-right"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-group has-feedback has-feedback-left">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Username">
                <div class="form-control-feedback">
                    <i class="icon-user text-muted"></i>
                </div>
            </div>

            <div class="form-group has-feedback has-feedback-left">
                <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password">
                <div class="form-control-feedback">
                    <i class="icon-lock2 text-muted"></i>
                </div>
            </div>

            <div class="form-group login-options">
                <div class="row">
                    <div class="col-md-12">
                        <label class="checkbox-inline">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="styled">
                            {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                    {#<div class="col-sm-6 text-right">
                        <a href="{{ path('fos_user_resetting_check_email') }}">Forgot password?</a>
                    </div>#}
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn bg-blue btn-block">{{ 'security.login.submit'|trans }} <i class="icon-circle-right2 position-right"></i></button>
            </div>


        </div>
    </form>
{% endblock fos_user_content %}
